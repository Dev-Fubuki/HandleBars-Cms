{{#each sections}}
<div class="mb-5">
  <h2 class="mb-4">{{this.name}}</h2>
  
  {{#if this.Products.length}}
  <div id="carousel-{{this.id}}" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      {{#each (chunkArray this.Products 5)}}
      <div class="carousel-item {{#if @first}}active{{/if}}">
        <div class="container">
          <div class="row g-4">
            {{#each this}}
            <div class="col" style="flex: 0 0 20%; max-width: 20%;">
              <div class="card h-100 shadow">
                <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">{{this.name}}</h5>
                  <p class="card-text text-truncate">{{this.description}}</p>
                  <p class="text-success fw-bold mb-0 mt-auto">R$ {{this.price}}</p>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
      {{/each}}
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carousel-{{this.id}}" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Anterior</span>
    </button>
    
    <button class="carousel-control-next" type="button" data-bs-target="#carousel-{{this.id}}" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Próximo</span>
    </button>
  </div>
  {{else}}
  <div class="alert alert-info">Nenhum produto disponível nesta seção</div>
  {{/if}}
</div>
{{/each}}
